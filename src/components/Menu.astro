<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<nav class="fixed top-0 w-full bg-white dark:bg-neutral-900 backdrop-blur-md z-50 border-l-8 border-blue-600 shadow-md transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">

    <!-- LOGO CON ANIMACIÓN RGB -->
    <div class="text-2xl font-bold font-[Anton] flex flex-wrap wave">
      <span style="--i:0">b</span><span style="--i:1">y</span><span style="--i:2">d</span><span style="--i:3">a</span>
      <span style="--i:4">n</span><span style="--i:5">i</span><span style="--i:6">e</span><span style="--i:7">l</span>
      <span style="--i:8">.</span><span style="--i:9">s</span><span style="--i:10">i</span><span style="--i:11">t</span><span style="--i:12">e</span>
    </div>

    <!-- MENÚ DE SECCIONES -->
    <ul class="hidden md:flex space-x-8 text-[20px] text-gray-700 dark:text-gray-300">
      <li><a href="#hero" class="menu-link">Inicio</a></li>
      <li><a href="#about" class="menu-link">Sobre mí</a></li>
      <li><a href="#projects" class="menu-link">Proyectos</a></li>
      <li><a href="#skills" class="menu-link">Habilidades</a></li>
      <li><a href="#experience" class="menu-link">Experiencia</a></li>
      <li><a href="#contact" class="menu-link">Contacto</a></li>
    </ul>

    <!-- ÍCONOS + MENU RESPONSIVE -->
    <div class="flex items-center gap-2">
      <button id="sun-icon" class="p-2 rounded hover:bg-yellow-200 text-yellow-600 hidden dark:inline transition">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
        </svg>
      </button>
      <button id="moon-icon" class="p-2 rounded hover:bg-gray-300 text-gray-800 dark:hidden transition">
        <i class="fas fa-moon text-xl"></i>
      </button>

      <!-- Botón hamburguesa -->
      <button id="toggleMenu" class="text-black dark:text-white p-2 rounded md:hidden">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
  </div>
</nav>

<!-- Overlay para cerrar el menú -->
<div id="menuOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 opacity-0 invisible transition-all duration-300 ease-in-out"></div>

<!-- Menú lateral responsive -->
<div id="mobileMenu" class="fixed top-0 right-0 h-full w-64 bg-white dark:bg-neutral-900 shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out z-50 border-l-4 border-blue-600">
  <div class="flex justify-end p-4">
    <button id="closeMenu" class="text-black dark:text-white hover:text-blue-600 transition">
      <i class="fas fa-times text-2xl"></i>
    </button>
  </div>
  <ul class="flex flex-col items-start gap-6 px-8 text-lg text-gray-800 dark:text-gray-200">
    <li class="menu-item-mobile" style="--delay: 0"><a href="#hero" class="menu-link-mobile">Inicio</a></li>
    <li class="menu-item-mobile" style="--delay: 1"><a href="#about" class="menu-link-mobile">Sobre mí</a></li>
    <li class="menu-item-mobile" style="--delay: 2"><a href="#projects" class="menu-link-mobile">Proyectos</a></li>
    <li class="menu-item-mobile" style="--delay: 3"><a href="#skills" class="menu-link-mobile">Habilidades</a></li>
    <li class="menu-item-mobile" style="--delay: 4"><a href="#experience" class="menu-link-mobile">Experiencia</a></li>
    <li class="menu-item-mobile" style="--delay: 5"><a href="#contact" class="menu-link-mobile">Contacto</a></li>
  </ul>
</div>

<style>
  .wave span {
    animation: wave 1.5s infinite, rgbColor 3s infinite;
    display: inline-block;
    font-weight: bold;
    text-shadow: 0 0 4px rgba(59, 130, 246, 0.3);
  }
  .wave span:nth-child(odd),
  .wave span:nth-child(even) {
    animation-delay: calc(var(--i) * 0.1s);
  }
  @keyframes wave {
    0%, 60%, 100% { transform: translateY(0); }
    30% { transform: translateY(-10px); }
  }
  @keyframes rgbColor {
    0% { color: #3b82f6; }
    33% { color: #8b5cf6; }
    66% { color: #06b6d4; }
    100% { color: #3b82f6; }
  }
  #sun-icon:hover,
  #moon-icon:hover {
    box-shadow: 0 0 12px rgba(255, 255, 0, 0.5);
    transform: rotate(10deg) scale(1.1);
  }
  #sun-icon,
  #moon-icon {
    transition: all 0.3s ease;
    animation: pulsoSuave 4s infinite;
  }
  @keyframes pulsoSuave {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  .menu-link {
    position: relative;
    transition: all 0.25s ease;
    color: inherit;
  }
  .menu-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0%;
    height: 2px;
    background-color: #3b82f6;
    transition: width 0.3s ease;
  }
  .menu-link:hover::after {
    width: 100%;
  }
  /* Menú móvil */
  .menu-item-mobile {
    opacity: 0;
    transform: translateX(50px) scale(0.8);
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  .menu-item-mobile.animate-in {
    opacity: 1;
    transform: translateX(0) scale(1);
    animation-delay: calc(var(--delay) * 0.1s);
  }
  .menu-item-mobile.animate-out {
    opacity: 0;
    transform: translateX(50px) scale(0.8);
    transition-delay: calc((5 - var(--delay)) * 0.05s);
  }
  .menu-link-mobile {
    position: relative;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: block;
    padding: 12px 0;
    font-weight: 500;
    color: inherit;
  }
  .menu-link-mobile::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
    transition: left 0.6s ease;
  }
  .menu-link-mobile:hover::before {
    left: 100%;
  }
  .menu-link-mobile::after {
    content: '';
    position: absolute;
    bottom: 8px;
    left: 0;
    width: 0%;
    height: 3px;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6, #06b6d4);
    border-radius: 2px;
    transition: width 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.3);
  }
  .menu-link-mobile:hover::after {
    width: 100%;
  }
  .menu-link-mobile:hover {
    transform: translateX(8px);
    color: #3b82f6;
    text-shadow: 0 0 12px rgba(59, 130, 246, 0.3);
  }
  #closeMenu {
    transition: all 0.3s ease;
  }
  #closeMenu:hover {
    transform: rotate(90deg) scale(1.1);
    color: #3b82f6;
  }
  .menu-overlay-visible {
    opacity: 1 !important;
    visibility: visible !important;
  }
  #mobileMenu {
    backdrop-filter: blur(10px);
  }
  #mobileMenu::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(59, 130, 246, 0.05) 0%, 
      transparent 50%, 
      rgba(59, 130, 246, 0.05) 100%);
    pointer-events: none;
  }
</style>

<script>
  const sunIcon = document.getElementById('sun-icon');
  const moonIcon = document.getElementById('moon-icon');
  const toggleBtn = document.getElementById('toggleMenu');
  const closeBtn = document.getElementById('closeMenu');
  const menu = document.getElementById('mobileMenu');
  const overlay = document.getElementById('menuOverlay');
  const mobileLinks = document.querySelectorAll('.menu-link-mobile');
  const mobileItems = document.querySelectorAll('.menu-item-mobile');

  function toggleTheme() {
    const html = document.documentElement;
    const isDark = html.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    updateIcons();
  }

  function updateIcons() {
    if (document.documentElement.classList.contains('dark')) {
      sunIcon.classList.remove('hidden');
      moonIcon.classList.add('hidden');
    } else {
      sunIcon.classList.add('hidden');
      moonIcon.classList.remove('hidden');
    }
  }

  function openMenu() {
    menu.classList.remove('translate-x-full');
    overlay.classList.add('menu-overlay-visible');
    document.body.style.overflow = 'hidden';
    
    setTimeout(() => {
      mobileItems.forEach(item => {
        item.classList.add('animate-in');
      });
    }, 150);
  }

  function closeMenu() {
    mobileItems.forEach(item => {
      item.classList.remove('animate-in');
      item.classList.add('animate-out');
    });
    
    setTimeout(() => {
      menu.classList.add('translate-x-full');
      overlay.classList.remove('menu-overlay-visible');
      document.body.style.overflow = '';
      mobileItems.forEach(item => {
        item.classList.remove('animate-out');
      });
    }, 400);
  }

  if (localStorage.getItem('theme') === 'dark') {
    document.documentElement.classList.add('dark');
  }
  updateIcons();

  sunIcon.addEventListener('click', toggleTheme);
  moonIcon.addEventListener('click', toggleTheme);
  toggleBtn.addEventListener('click', openMenu);
  closeBtn.addEventListener('click', closeMenu);
  overlay.addEventListener('click', closeMenu);

  mobileLinks.forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !menu.classList.contains('translate-x-full')) {
      closeMenu();
    }
  });
</script>
