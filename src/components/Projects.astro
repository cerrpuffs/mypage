<section id="projects" class="py-16 bg-white dark:bg-gray-900 text-black dark:text-white">
    <div class="container mx-auto px-4">
        <!-- Título principal -->
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4">
