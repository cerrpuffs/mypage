---
// daniel-profile.astro
---

<div class="max-w-2xl mx-auto p-4 sm:p-6">
  <div class="bg-gray-900 rounded-lg shadow-2xl overflow-hidden">
    <!-- Header del terminal -->
    <div class="bg-gray-800 px-3 sm:px-4 py-3 flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-red-500 rounded-full"></div>
        <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-yellow-500 rounded-full"></div>
        <div class="w-2.5 h-2.5 sm:w-3 sm:h-3 bg-green-500 rounded-full"></div>
      </div>
      <div class="text-green-400 font-mono text-xs sm:text-sm">daniel.js</div>
      <div class="text-green-400">
        <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </div>
    </div>

    <!-- Contenido del código -->
    <div class="p-3 sm:p-6 bg-gray-900 text-green-400 font-mono text-xs sm:text-sm leading-relaxed overflow-x-auto">
      <div class="space-y-1 min-w-max">
        <!-- Línea 1 -->
        <div class="flex whitespace-nowrap">
          <span class="text-gray-500 w-4 sm:w-6 text-right mr-2 sm:mr-4 flex-shrink-0">1</span>
          <span class="text-purple-400">const</span>
          <span class="text-blue-300 ml-1 sm:ml-2">daniel</span>
          <span class="text-white ml-1 sm:ml-2">=</span>
          <span class="text-yellow-300 ml-1 sm:ml-2">{</span>
        </div>
        
        <!-- Línea 2 -->
        <div class="flex whitespace-nowrap">
          <span class="text-gray-500 w-4 sm:w-6 text-right mr-2 sm:mr-4 flex-shrink-0">2</span>
          <span class="ml-2 sm:ml-4 text-cyan-300">Pasion:</span>
          <span class="text-green-300 ml-1 sm:ml-2">'La programacion y la musica'</span><span class="text-white">,</span>
        </div>
        
        <!-- Línea 3 - Dividida en móviles -->
        <div class="flex whitespace-nowrap">
          <span class="text-gray-500 w-4 sm:w-6 text-right mr-2 sm:mr-4 flex-shrink-0">3</span>
          <span class="ml-2 sm:ml-4 text-cyan-300">Tecnologias:</span>
          <span class="text-yellow-300 ml-1 sm:ml-2">[</span>
        </div>
        
        <!-- Línea 3a - Continuación en móviles -->
        <div class="flex whitespace-nowrap sm:hidden">
          <span class="text-gray-500 w-4 text-right mr-2 flex-shrink-0"> </span>
          <span class="ml-4 text-green-300">'Astro'</span><span class="text-white">,</span>
          <span class="text-green-300 ml-1">'TailwindCSS'</span><span class="text-white">,</span>
          <span class="text-green-300 ml-1">'C++'</span><span class="text-yellow-300">]</span><span class="text-white">,</span>
        </div>
        
        <!-- Línea 3 completa para desktop -->
        <div class="hidden sm:flex whitespace-nowrap">
          <span class="text-gray-500 w-6 text-right mr-4 flex-shrink-0">3</span>
          <span class="ml-4 text-cyan-300">Tecnologias:</span>
          <span class="text-yellow-300 ml-2">[</span><span class="text-green-300">'Astro'</span><span class="text-white">,</span>
          <span class="text-green-300 ml-2">'TailwindCSS'</span><span class="text-white">,</span>
          <span class="text-green-300 ml-2">'C++'</span><span class="text-yellow-300">]</span><span class="text-white">,</span>
        </div>
        
        <!-- Línea 4 -->
        <div class="flex whitespace-nowrap">
          <span class="text-gray-500 w-4 sm:w-6 text-right mr-2 sm:mr-4 flex-shrink-0">4</span>
          <span class="ml-2 sm:ml-4 text-cyan-300">Meta:</span>
        </div>
        
        <!-- Línea 4a - Continuación en móviles -->
        <div class="flex whitespace-nowrap sm:hidden">
          <span class="text-gray-500 w-4 text-right mr-2 flex-shrink-0"> </span>
          <span class="ml-4 text-green-300">'Crear herramientas hermosas</span>
        </div>
        
        <div class="flex whitespace-nowrap sm:hidden">
          <span class="text-gray-500 w-4 text-right mr-2 flex-shrink-0"> </span>
          <span class="ml-4 text-green-300">y utiles'</span><span class="text-white">,</span>
        </div>
        
        <!-- Línea 4 completa para desktop -->
        <div class="hidden sm:flex whitespace-nowrap">
          <span class="text-gray-500 w-6 text-right mr-4 flex-shrink-0">4</span>
          <span class="ml-4 text-cyan-300">Meta:</span>
          <span class="text-green-300 ml-2">'Crear herramientas hermosas y utiles'</span><span class="text-white">,</span>
        </div>
        
        <!-- Línea 5 -->
        <div class="flex items-center whitespace-nowrap">
          <span class="text-gray-500 w-4 sm:w-6 text-right mr-2 sm:mr-4 flex-shrink-0">5</span>
          <span class="ml-2 sm:ml-4 text-cyan-300">cafe:</span>
          <span class="text-green-300 ml-1 sm:ml-2">'</span><span id="coffee-emoji" class="text-base sm:text-lg">☕</span><span class="text-green-300">'</span><span class="text-white">.repeat(</span><span class="text-purple-400">Infinity</span><span class="text-white">)</span>
        </div>
        
        <!-- Línea 6 -->
        <div class="flex whitespace-nowrap">
          <span class="text-gray-500 w-4 sm:w-6 text-right mr-2 sm:mr-4 flex-shrink-0">6</span>
          <span class="text-yellow-300">}</span><span class="text-white">;</span>
        </div>
      </div>
    </div>

    <!-- Cursor parpadeante -->
    <div class="px-3 sm:px-6 pb-4">
      <div class="flex items-center">
        <span class="text-gray-500 w-4 sm:w-6 text-right mr-2 sm:mr-4 font-mono text-xs sm:text-sm flex-shrink-0">7</span>
        <span id="cursor" class="bg-green-400 w-1.5 sm:w-2 h-3 sm:h-4 ml-2 sm:ml-4 animate-pulse"></span>
      </div>
    </div>
  </div>
</div>

<script>
  const coffeeEmoji = document.getElementById('coffee-emoji');
  const coffeeVariants = ['☕', '🍵', '🥤', '🧋'];
  let currentIndex = 0;

  setInterval(() => {
    currentIndex = (currentIndex + 1) % coffeeVariants.length;
    coffeeEmoji.textContent = coffeeVariants[currentIndex];
  }, 2000);

  // Efecto de escritura en tiempo real (opcional)
  const cursor = document.getElementById('cursor');
  setInterval(() => {
    cursor.style.opacity = cursor.style.opacity === '0' ? '1' : '0';
  }, 500);
</script>

<style>
  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
  
  #cursor {
    animation: blink 1s infinite;
  }
</style>