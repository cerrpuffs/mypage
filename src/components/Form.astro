<style>
    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }
    
    @keyframes pulse-slow {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    @keyframes glow {
        from { box-shadow: 0 0 20px rgba(99, 102, 241, 0.3); }
        to { box-shadow: 0 0 40px rgba(99, 102, 241, 0.6); }
    }
    
    .animate-float {
        animation: float 12s ease-in-out infinite;
    }
    
    .animate-pulse-slow {
        animation: pulse-slow 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    
    .animate-glow {
        animation: glow 2s ease-in-out infinite alternate;
    }
</style>

<script>
    const form = document.getElementById("contactForm") as HTMLFormElement;
    const modal = document.getElementById("modal") as HTMLElement;
    const darkModeModal = document.getElementById("darkModeModal") as HTMLElement;
    const enableDarkModeBtn = document.getElementById("enableDarkMode") as HTMLButtonElement;
    const closeDarkModeModalBtn = document.getElementById("closeDarkModeModal") as HTMLButtonElement;

    // FunciÃ³n para mostrar el modal de modo oscuro
    function showDarkModeModal() {
        // Solo mostrar si no se ha mostrado antes
        const hasSeenModal = localStorage.getItem('darkModeModalSeen');
        
        if (!hasSeenModal) {
            setTimeout(() => {
                darkModeModal?.classList.remove("opacity-0", "pointer-events-none");
                darkModeModal?.querySelector("div")?.classList.remove("scale-90");
                darkModeModal?.querySelector("div")?.classList.add("scale-100");
            }, 1000); // Mostrar despuÃ©s de 1 segundo
        }
    }

    // FunciÃ³n para activar modo oscuro
    function enableDarkMode() {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
        closeDarkModeModal();
    }

    // FunciÃ³n para cerrar el modal
    function closeDarkModeModal() {
        darkModeModal?.classList.add("opacity-0", "pointer-events-none");
        darkModeModal?.querySelector("div")?.classList.add("scale-90");
        darkModeModal?.querySelector("div")?.classList.remove("scale-100");
        localStorage.setItem('darkModeModalSeen', 'true');
    }

    // Event listeners para el modal de modo oscuro
    enableDarkModeBtn?.addEventListener("click", enableDarkMode);
    closeDarkModeModalBtn?.addEventListener("click", closeDarkModeModal);

    // Cerrar modal al hacer click en el fondo
    darkModeModal?.addEventListener("click", (e) => {
        if (e.target === darkModeModal) {
            closeDarkModeModal();
        }
    });

    // Detectar tema del sistema y mostrar modal
    window.addEventListener('DOMContentLoaded', () => {
        // Aplicar tema guardado o detectar preferencia del sistema
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
            document.documentElement.classList.add('dark');
        }

        // Mostrar modal de recomendaciÃ³n
        showDarkModeModal();
    });

    // Formulario de contacto
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const data = new FormData(form);
        const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        
        // Cambiar estado del botÃ³n durante el envÃ­o
        if (submitBtn) {
            submitBtn.innerHTML = `
                <span class="flex items-center justify-center space-x-2">
                    <span>Enviando...</span>
                    <div class="animate-spin h-5 w-5 border-2 border-white/30 border-t-white rounded-full"></div>
                </span>
            `;
            submitBtn.disabled = true;
        }

        try {
            const response = await fetch("https://formspree.io/f/meokvwvd", {
                method: "POST",
                body: data,
                headers: {
                    Accept: "application/json",
                },
            });

            if (response.ok) {
                // Mostrar modal de Ã©xito
                modal?.classList.remove("opacity-0", "pointer-events-none", "translate-x-full");
                
                setTimeout(() => {
                    modal?.classList.add("opacity-0", "pointer-events-none", "translate-x-full");
                    form.reset();
                }, 5000);
            } else {
                throw new Error("Error en el servidor");
            }
        } catch (err) {
            alert("Error al enviar el mensaje: " + (err as Error).message);
        } finally {
            // Restaurar botÃ³n
            if (submitBtn) {
                submitBtn.innerHTML = `
                    <span class="flex items-center justify-center space-x-2">
                        <span>Enviar mensaje</span>
                        <span class="text-lg">ðŸ“¨</span>
                    </span>
                `;
                submitBtn.disabled = false;
            }
        }
    });

    // Efecto de partÃ­culas en el fondo
    function createParticle() {
        const particle = document.createElement('div');
        particle.className = 'fixed pointer-events-none w-2 h-2 bg-indigo-400/20 rounded-full animate-pulse-slow';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.top = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 4 + 's';
        document.body.appendChild(particle);
        
        setTimeout(() => {
            particle.remove();
        }, 8000);
    }

    // Crear partÃ­culas cada 3 segundos
    setInterval(createParticle, 3000);
</script>